# Environment Configuration
FASTAPI_ENV=development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0", "*.replit.dev"]
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5000", "https://*.replit.dev"]

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
SESSION_TTL=1800  # 30 minutes

# ML Model Configuration
MODEL_REGISTRY_PATH=./app/ml/models/registry.json
SHAP_CACHE_SIZE=1000
CALIBRATION_METHOD=isotonic
MODEL_CONFIDENCE_THRESHOLD=0.7

# Document Processing
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["pdf", "png", "jpg", "jpeg"]
OCR_LANGUAGE=eng

# Geographic Services
GEOCODING_PROVIDER=nominatim
MAX_PROVIDER_RADIUS_MILES=50

# Privacy and Compliance
DATA_RETENTION_HOURS=0.5  # 30 minutes
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=INFO
ANONYMIZE_LOGS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10